{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@env/*": ["apps/shell/src/environments/*"],
      "@nx-microfrontends-angular/api-types": ["libs/shared/api-types/src/index.ts"],
      "@nx-microfrontends-angular/auth-data-access": ["libs/shared/auth-data-access/src/index.ts"],
      "@nx-microfrontends-angular/data-access": ["libs/auth/data-access/src/index.ts"],
      "@nx-microfrontends-angular/error-handler": ["libs/shared/error-handler/src/index.ts"],
      "@nx-microfrontends-angular/feature-login": ["libs/auth/feature-login/src/index.ts"],
      "@nx-microfrontends-angular/feature-register": ["libs/auth/feature-register/src/index.ts"],
      "@nx-microfrontends-angular/forms": ["libs/shared/forms/src/index.ts"],
      "@nx-microfrontends-angular/http-client": ["libs/shared/http-client/src/index.ts"],
      "auth/Routes": ["apps/auth/src/app/remote-entry/entry.routes.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
