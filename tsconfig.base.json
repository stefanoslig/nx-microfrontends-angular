        "libs/auth/data-access/src/index.ts"
      ],
      "@nx-microfrontends-angular/feature-login": [
        "libs/auth/feature-login/src/index.ts"
      ],
      "@nx-microfrontends-angular/feature-register": [
        "libs/auth/feature-register/src/index.ts"
      ],
      "auth/Routes": ["apps/auth/src/app/remote-entry/entry.routes.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
